

$primary-color: #007bc4;
$primay-active-button-text-color: #ffffff;
$primary-bold: 600;
$primary-green: #69A30D;
$light-green: #B5C989;




.module {
	&.update-browser-warning {
			color: #000;
			position: relative;
			width: 50%;
			top: 15%;
			border: solid 1px #b7b7b7;
			background-color: rgba(256,256,256,1);
			margin: auto;
			text-align: center;
			padding-bottom: 50px;
			.starter {
				margin: auto;
				padding: 15px 20px 20px;
			}
			.bg-grey {
				padding: 10px;
			}
			.browser-icon {
				height: 64px;
				width: 64px;
				margin: 0 auto 7px;
				text-align: center;
				background: url('<%= asset_path("images/broswericons_128.png") %>');
				&.chrome {
					background-position: left top;
				}
				&.safari {
					background-position: right top;
				}
				&.firefox {
					background-position: left bottom;
				}
			}
	}
  &.market-selection {
    padding: 0 15% 5%;
    .btn-primary {
      padding: 4%;
      font-size: auto;
      font-size: 13px;
      background-color: transparent;
      border: solid 1px #ccc;
      border-radius: 3px;
      text-transform: capitalize;
      &.active {
        background-color: $primary-color;
        a {
          color: $primay-active-button-text-color;
        }
      }
    }
  }
  	&.wizard {
			.intake-progress {
				.nav {
					li {
						&.active {
							a {
								background-color: $primary-green;
								font-weight: 600;
								color: #fff;
								&:hover {
									color: #fff;
								}
							}
						}
						a {
							background-color: #fff;
							text-transform: capitalize;
							border: none;
							&:hover {
								color: #bbbbbb;
							}
							.step-number {
								font-size: 1.5vw;
							}
							.step-text {
							}
						}
						.fa {
							&.fa-caret-down {
								display: block;
								text-align: center;
								margin-top: -5px;
								color: $primary-green;
							}
						}
					}
				}
			}
			.intake-steps {
				.nav-tabs {
					border-bottom: none;
					li {
						&.active {
							position: relative;
							a {
								background-color: $primary-green;
								color: #fff;
							}
							.fa {
								&.fa-caret-right {
									position: absolute;
									margin-top: -7px;
									right: -4px;
									top: 50%;
									color: $primary-green;
									display: block;
								}
							}
						}
						.fa {
							&.fa-caret-right {
								display: none;
							}
						}
						a {
							color: #333;
						}
					}
				}
			}
			.tab-content {
				.tab-pane {
					.fa {
						color: $primary-color;
						display: block;
						text-align: center;
						padding: 5% 0;
					}
				}
			}
		}
}
