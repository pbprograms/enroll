$("#message_list_form").hide();
$("#inbox_form").show();
$('#show_message_form').show().html("<%= escape_javascript(render "exchanges/agents/message", message: @message) %>");
$(".btn-danger").click(function(){
  $('#show_message_form').hide();
  $("#inbox_form, #message_list_form").show();
  set_tab_content("<%= escape_javascript(render "exchanges/agents/message_list", provider: @inbox_provider) %>");
});
